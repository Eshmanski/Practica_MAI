<h1 class="center">Заявки</h1>

<div class="row">
  <div id="toDoCol" class="col s4">
    <h4 class="card red col-header">В обработке</h4>
    {{#each leads}}
      {{#if_eq status 'to_do'}}
      <div id="toDoCard" class="card blue-grey darken-1" data-key="{{_id}}">
        <div class="card-content white-text">
          <p><span class="card-header">Заявка:</span> {{_id}}</p>
          <hr>
          <p>{{firstName}} {{lastName}}</p>

          <p>Телефон: <span class="card-info">{{ tel }}</span></p>
          <p>Email: <span class="card-info email">{{ email }}</span></p>
          <hr>
          <p>{{description}}</p>
        </div>
        <div id="cardActions" class="card-action">
          <div class="row-buttons">
            <button data-csrf="{{@root.csrf}}" data-id="{{_id}}" id="deleteLead" class="btn red" type="button">Удалить</button>
            <button data-csrf="{{@root.csrf}}" data-id="{{_id}}" id="submitLead" class="btn btn-prymary" type="button">Подтвердить</button>
          </div>
        </div>
      </div>
      {{/if_eq}}
    {{/each}}
  </div>
  <div id="inProgressCol" class="col s4">
    <h4 class="card yellow col-header">В процессе исполнения</h4>
    {{#each leads}}
      {{#if_eq status 'in_progress'}}
      <div id="inProgressCard" class="card blue-grey darken-1" data-key="{{_id}}">
        <div class="card-content white-text">
          <p><span class="card-header">Заявка:</span> {{_id}}</p>
          <hr>
          <p>{{firstName}} {{lastName}}</p>

          <p>Телефон: <span class="card-info">{{ tel }}</span></p>
          <p>Email: <span class="card-info email">{{ email }}</span></p>
          <hr>
          <p>{{description}}</p>
        </div>
        <div id="cardActions" class="card-action">
          <div class="row-buttons">
            <button data-csrf="{{@root.csrf}}" data-id="{{_id}}" id="doneLead" class="btn btn-prymary" type="button">Выполнено</button>
          </div>
        </div>
      </div>
      {{/if_eq}}
    {{/each}}
  </div>
  <div id="doneCol" class="col s4">
      <h4 class="card green col-header">Завершонные</h4>
      {{#each leads}}
      {{#if_eq status 'done'}}
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p><span class="card-header">Заявка:</span> {{_id}}</p>
          <hr>
          <p>{{firstName}} {{lastName}}</p>
          <p>Телефон: <span class="card-info">{{ tel }}</span></p>
          <p>Email: <span class="card-info email">{{ email }}</span></p>
          <hr>
          <p>{{description}}</p>
        </div>
      </div>
      {{/if_eq}}
    {{/each}}
  </div>
</div>
